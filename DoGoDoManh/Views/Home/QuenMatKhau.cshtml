
@model DoGoDoManh.Models.DangNhap
@{
    ViewBag.Title = "";
}
@using (Html.BeginForm("QuenMatKhau", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="container-fluid">
        <div class="main container">
            <div class="account-login">
                <div class="page-title">
                    <h2 class="m-4">Đăng nhập</h2>
                </div>
                <div class="row">
                    <div class="col col-6">
                        <div class="new-users">
                            <strong>Đăng ký</strong>
                            <div class="content">
                                <p>
                                    Tạo tài khoản để quản lý đơn hàng, và các thông tin thanh
                                    toán, gửi hàng một cách đơn giản hơn.
                                </p>
                                <div class="buttons-set">
                                    <button class="button create-account">
                                        <span>@Html.ActionLink("Tạo tài khoản", "register", "Home")</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="registered-users">
                            <div class="content">
                                <form>
                                    <input name="FormType"
                                           type="hidden"
                                           value="customer_login" />
                                    <input name="utf8" type="hidden" value="true" />
                                    <strong>Đặt lại mật khẩu</strong>
                                    <p>Chúng tôi sẽ gửi cho bạn một email để kích hoạt việc đặt lại mật khẩu.</p>

                                    <ul class="form-list">
                                        <li>
                                            <label for="email">Email<span class="required">*</span></label>
                                            <br />
                                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                        </li>

                                    </ul>
                                    <p class="required">* Bắt buộc</p>
                                </form>
                                <div class="buttons-set">
                                    <button id="send2" type="submit" class="button login">
                                        Gửi

                                    </button>
                                    hoặc
                                    <a href="Login">Hủy</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

