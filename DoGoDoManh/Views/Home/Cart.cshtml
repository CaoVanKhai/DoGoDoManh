@model  IEnumerable<DoGoDoManh.Models.ProductsCart>
@{
    ViewBag.Title = "Cart";
}
<section class="main-container col1-layout">
    <div class="main container">
        <div class="col-main">
            <div class="cart">
                <div class="page-title">
                    <h2>Giỏ hàng</h2>
                </div>

                <form action="/cart" method="post" novalidate>
                    <div class="table-responsive">
                        <fieldset>
                            <table class="data-table cart-table" id="shopping-cart-table">
                                <colgroup>
                                    <col />
                                    <col />
                                    <col />
                                    <col />
                                    <col />
                                    <col />
                                    <col />
                                </colgroup>
                                <thead>
                                    <tr class="first last">
                                        <th rowspan="1">&nbsp;</th>
                                        <th rowspan="1">
                                            <span class="nobr">Tên sản phẩm</span>
                                        </th>
                                        <th colspan="1" class="a-center">
                                            <span class="nobr">Giá bán lẻ</span>
                                        </th>
                                        <th class="a-center" rowspan="1">Số lượng</th>
                                        <th colspan="1" class="a-center">Tạm tính</th>

                                        <th rowspan="1">&nbsp;</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="image" style="width: 150px">
                                                <a class="product-image"
                                                   title="Bộ bàn ghế âu á hộp 9 món  gỗ mun đuôi công"
                                                   href="/bo-ban-ghe-au-a-hop-9-mon-go-mun-duoi-cong">
                                                    <img width="75"
                                                         height="75"
                                                         alt="Bộ bàn ghế âu á hộp 9 món  gỗ mun đuôi công"
                                                         src="~/wwwroot/imgs/product1.png" />
                                                </a>
                                            </td>
                                            <td style="width: 500px">
                                                <h2 class="product-name" style="font-size: 16px">
                                                    <a href="/bo-ban-ghe-au-a-hop-9-mon-go-mun-duoi-cong"
                                                       style="color: black">@Html.DisplayFor(modelItem => item.Product.ProductName)</a>
                                                </h2>
                                                <span class="variant-title" style="display: none">Default Title</span>
                                            </td>
                                            <td class="" style="width: 150px">
                                                <span class="cart-price">
                                                    <span class="price">@Html.DisplayFor(modelItem => item.Product.CurrentPrice)</span>
                                                </span>
                                            </td>
                                            <td style="width: 150px">
                                                @Html.EditorFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "input-text qty", @size = "4", @style = "width: 50px", type = "number", @maxlength = "12", @min = "1" } })
                                                @*<input type="number"
                                                    maxlength="12"
                                                    min="1"
                                                    class="input-text qty"
                                                    title="Số lượng"
                                                    size="4"
                                                    value="1"
                                                    name="Lines"
                                                    id="updates_51592605"
                                                    style="width: 50px" />*@
                                            </td>
                                            <td>
                                                <span class="cart-price" style="width: 150px">
                                                    <span class="price">@(item.Product.CurrentPrice * item.Quantity)</span>
                                                </span>
                                            </td>

                                            <td style="width: 150px">
                                                <a class="button remove-item"
                                                   title="Xóa"
                                                   href="@Url.Action("DeleteCart","Home", new { id=item.ProductId })"
                                                   data-id="51592605"
                                                   style="padding-left: 20px">
                                                    <span>
                                                        Xóa
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr class="first last">
                                        <td class="a-right last" colspan="7">
                                            <button class="button btn-continue"
                                                    title="Tiếp tục mua hàng"
                                                    type="button">
                                                <span>@Html.ActionLink("Tiếp tục mua hàng", "Index", "Home")</span>
                                            </button>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </fieldset>
                    </div>
                </form>

                <div class="cart-collaterals row">
                    <div class="totals col-sm-4 col-md-offset-8">
                        <h3>Tổng cộng</h3>
                        <div class="inner">
                            <table class="table shopping-cart-table-total"
                                   id="shopping-cart-totals-table">
                                <colgroup>
                                    <col />
                                    <col />
                                </colgroup>
                                <tfoot>
                                    <tr>
                                        <td colspan="1" class="a-left">
                                            <strong>Tổng tiền</strong>
                                        </td>
                                        <td class="a-right">
                                            <strong><span class="price">39.700.000₫</span></strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            <ul class="checkout">
                                <li>
                                    <a href="Dathang.html">
                                        <button class="button btn-proceed-checkout"
                                                title="Tiến hành thanh toán"
                                                type="button"
                                                onclick="window.location.href='/checkout'">
                                            <span>@Html.ActionLink("Tiến hành thanh toán", "Order", "Home")</span>
                                        </button>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!--inner-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


