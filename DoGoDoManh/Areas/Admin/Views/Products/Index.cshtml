@model PagedList.IPagedList<DoGoDoManh.Areas.Admin.Data.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div>
        <span style="font-weight: bold;font-size: 30px;">QUẢN LÝ SẢN PHẨM</span>
        <a href="@Url.Action("Create","Products")" class="btn btn-success float-right mr-5">
            + Thêm mới
        </a>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col" align="center">Hình ảnh</th>
                <th scope="col" align="center">Tên sản phẩm</th>
                <th scope="col" align="center">Giá mới</th>
                <th scope="col" align="center">Giá cũ</th>
                <th scope="col" align="center">Số lượng tồn</th>
                <th scope="col" colspan="3" class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/wwwroot/imgs/@item.Image" width="100" height="100" class="img-thumbnail" alt="Sản phẩm 1"></td>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.OldPrice)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.CurrentPrice)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.InventQuantity)</td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", "Products", new { id = item.ProductId }, new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", "Products", new { id = item.ProductId }, new { @class = "btn btn-warning" })

                        </td>
                        <td>
                            @Html.ActionLink("Xoá", "Delete", "Products", new { id = item.ProductId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="d-flex" style="justify-content: center;align-items: center;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>

