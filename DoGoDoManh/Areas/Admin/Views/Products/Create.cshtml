@model DoGoDoManh.Areas.Admin.Data.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div>
        <span style="font-weight: bold;font-size: 30px;">QUẢN LÝ SẢN PHẨM</span>
        <nav aria-label="breadcrumb">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Products")">Quản lý sản phẩm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thêm sản phẩm</li>
                </ol>
            </nav>
        </nav>
    </div>
    <br />
    <div style="width:800px" class="m-auto">
        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px">
                    <b>@Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "control-label " })</b>
                </div>
                <div style="width: 100%">
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>

            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px"><b>@Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label " })</b></div>
                <div style="width: 100%">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>
            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px"><b>@Html.LabelFor(model => model.OldPrice, htmlAttributes: new { @class = "control-label " }) (VNĐ)</b></div>
                <div style="width: 100%">
                    @Html.EditorFor(model => model.OldPrice, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    @Html.ValidationMessageFor(model => model.OldPrice, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>


            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px">
                    <b>
                        @Html.LabelFor(model => model.CurrentPrice, htmlAttributes: new { @class = "control-label " }) (VNĐ)
                    </b>
                </div>
                <div style="width: 100%">
                    @Html.EditorFor(model => model.CurrentPrice, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    @Html.ValidationMessageFor(model => model.CurrentPrice, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>

            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px">
                    <b>
                        @Html.LabelFor(model => model.InventQuantity, htmlAttributes: new { @class = "control-label " })
                    </b>
                </div>
                <div style="width: 100%">
                    @Html.EditorFor(model => model.InventQuantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InventQuantity, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>

            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px">
                    <b>
                        @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label " })
                    </b>
                </div>
                <div style="width: 100%">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>

            <div class="form-group" style="display: flex;justify-content:center;align-items:center">
                <div style="width: 200px">
                    <b>
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label " })
                    </b>
                </div>
                <div style="width: 100%">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-size: 13px" })
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-primary m-auto">Thêm sản phẩm</button>
                <a href="@Url.Action("Index", "Products")" class="btn btn-dark m-auto">Quay lại</a>
            </div>
        }
    </div>

</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}
